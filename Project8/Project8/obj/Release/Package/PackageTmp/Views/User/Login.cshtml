@model FPTBookstore.Models.Data.Customer

<ul class="nav navbar-nav navbar-right">
    @if (Session["User"] == null)
    {       
            
        <li><a href="/User/Register" style="color: #525151;"><i class="fa fa-pencil" aria-hidden="true" style="color:#525151"></i> Register</a></li>
            <li class="dropdown">
                <a href="/User/Login" style="color: #525151; background:none" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-pencil" aria-hidden="true" style="color:#525151"></i> Log in <b class="caret"></b></a>
                <ul class="dropdown-menu" style="padding: 15px;min-width: 250px">
                    <li>
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("LoginPage", "User", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Account, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Username" })
                                        @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"> Remember?
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <button style="background-color:#90EE90" type="submit" class="btn btn-success btn-block">Log in</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/Admin/Login"><i class="fa fa-user" aria-hidden="true" style="color: #525151;"></i></a>
            </li>
            @Html.Action("CartHeader", "Cart")
    }
    else
    {
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"style="background-image: linear-gradient(to top, #B0C4DE 0%, #ADD8E6 100%); color:#525151">
                <i class="fa fa-user-o" aria-hidden="true"></i> User Account : @Session["User"] <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="/User/EditUser"><i class="fa fa-user-md" style="margin-right: 5px;" aria-hidden="true"></i> Profile</a>
                </li>
                <li><a href="/Cart"><i class="fa fa-shopping-cart" style="margin-right: 6px;" aria-hidden="true"></i>Cart</a></li>
                <li>
                    <a href="/Cart/TrackingOder"><i class="fa fa-archive"></i> Order</a>
                </li>
                <li>
                    <a href="/User/Logout"><i class="fa fa-sign-out fa-fw"></i> Log out</a>
                </li>
            </ul>
            <!-- /.dropdown-user -->
        </li>
    }

</ul>

